---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import LaborFooter from '../components/layout/LaborFooter.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
---

<BaseLayout 
  title={title} 
  description={description} 
  theme="labor"
  ogImage={ogImage}
>
  <Header slot="header" world="labor" />
  <slot />
  <LaborFooter slot="footer" />
</BaseLayout>
