---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import SerieFooter from '../components/layout/SerieFooter.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
---

<BaseLayout 
  title={title} 
  description={description} 
  theme="serie"
  ogImage={ogImage}
>
  <Header slot="header" world="serie" />
  <slot />
  <SerieFooter slot="footer" />
</BaseLayout>
