---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  publishDate?: Date;
  author?: string;
}

const { title, description, ogImage, publishDate, author } = Astro.props;
---

<BaseLayout 
  title={title} 
  description={description} 
  theme="neutral"
  ogImage={ogImage}
>
  <Fragment slot="head">
    {publishDate && <meta property="article:published_time" content={publishDate.toISOString()} />}
    {author && <meta property="article:author" content={author} />}
  </Fragment>
  
  <Header slot="header" />
  
  <article class="magazin-article">
    <slot />
  </article>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .magazin-article {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-8) var(--container-padding);
  }
</style>
