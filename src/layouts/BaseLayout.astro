---
import '../styles/global.css';
import SEO from '../components/seo/SEO.astro';
import SchemaOrg from '../components/seo/SchemaOrg.astro';
import { organizationSchema, websiteSchema } from '../components/seo/schemas';

interface Props {
  title: string;
  description?: string;
  theme?: 'labor' | 'serie' | 'neutral';
  ogImage?: string;
  noIndex?: boolean;
  schema?: object | object[];
}

const {
  title,
  description = 'Microvista - Industrielle Computertomographie. Anywhere. Anytime. Fast.',
  theme = 'neutral',
  ogImage = '/images/og-default.jpg',
  noIndex = false,
  schema
} = Astro.props;

// Standard-Schemas für jede Seite
const defaultSchemas = [organizationSchema, websiteSchema];
const pageSchemas = schema
  ? [...defaultSchemas, ...(Array.isArray(schema) ? schema : [schema])]
  : defaultSchemas;
---

<!DOCTYPE html>
<html lang={Astro.locals.locale || 'de'} data-theme={theme}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- SEO Meta Tags -->
  <SEO
    title={`${title} | Microvista`}
    description={description}
    image={ogImage}
    noindex={noIndex}
  />

  <!-- Strukturierte Daten -->
  <SchemaOrg schema={pageSchemas} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />

  <!-- Preconnect für Performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Zusätzliche Head-Elemente von Seiten -->
  <slot name="head" />
</head>
<body>
  <slot name="header" />

  <main id="content">
    <slot />
  </main>

  <slot name="footer" />

  <slot name="scripts" />
</body>
</html>

<style is:global>
  /* Page transition */
  @view-transition {
    navigation: auto;
  }
</style>
