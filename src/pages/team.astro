---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('team', locale);

const labels = {
  de: {
    title: 'Unser Team',
    description: 'Lernen Sie das Microvista-Team kennen — CT-Experten, Ingenieure und Qualitätsspezialisten.'
  },
  en: {
    title: 'Our Team',
    description: 'Meet the Microvista team — CT experts, engineers and quality specialists.'
  },
  fr: {
    title: 'Notre équipe',
    description: 'Rencontrez l’équipe Microvista : experts CT, ingénieurs et spécialistes qualité.'
  },
  es: {
    title: 'Nuestro equipo',
    description: 'Conozca al equipo de Microvista: expertos en CT, ingenieros y especialistas en calidad.'
  },
  it: {
    title: 'Il nostro team',
    description: 'Scopri il team Microvista: esperti CT, ingegneri e specialisti qualità.'
  }
}[locale] || {
  title: 'Unser Team',
  description: 'Lernen Sie das Microvista-Team kennen — CT-Experten, Ingenieure und Qualitätsspezialisten.'
};
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="team-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.title }]} />
      <article class="team-content" set:html={content} />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .team-page { padding-bottom: var(--space-16); }
  .team-content { max-width: 1000px; margin: 0 auto; padding: var(--space-8) 0; }
  .team-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); text-align: center; }
  .team-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .team-content :global(p) { line-height: 1.8; margin-bottom: var(--space-4); }
  .team-content :global(img) { border-radius: var(--radius-xl); max-width: 100%; height: auto; }
</style>
