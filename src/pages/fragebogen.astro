---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('fragebogen', locale);

const labels = {
  de: {
    title: 'Fragebogen',
    description: 'Fragebogen zur Auswahl geeigneter Prüfverfahren bei Microvista.',
    breadcrumb: 'Fragebogen'
  },
  en: {
    title: 'Questionnaire',
    description: 'Questionnaire to identify suitable inspection methods at Microvista.',
    breadcrumb: 'Questionnaire'
  },
  fr: {
    title: 'Questionnaire',
    description: 'Questionnaire pour identifier les méthodes de contrôle adaptées chez Microvista.',
    breadcrumb: 'Questionnaire'
  },
  es: {
    title: 'Cuestionario',
    description: 'Cuestionario para identificar métodos de inspección adecuados en Microvista.',
    breadcrumb: 'Cuestionario'
  },
  it: {
    title: 'Questionario',
    description: 'Questionario per identificare metodi di ispezione adatti in Microvista.',
    breadcrumb: 'Questionario'
  }
}[locale] || {
  title: 'Fragebogen',
  description: 'Fragebogen zur Auswahl geeigneter Prüfverfahren bei Microvista.',
  breadcrumb: 'Fragebogen'
};
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="static-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.breadcrumb }]} />
      <article class="static-content">
        {content ? <div set:html={content} /> : <p>Inhalt folgt in Kürze.</p>}
      </article>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .static-page { padding-bottom: var(--space-16); }
  .static-content { max-width: 900px; margin: 0 auto; padding: var(--space-8) 0; }
  .static-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); }
  .static-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .static-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .static-content :global(p) { line-height: 1.8; margin-bottom: var(--space-4); }
  .static-content :global(img) { max-width: 100%; height: auto; border-radius: var(--radius-xl); }
</style>
