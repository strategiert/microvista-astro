---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('datenschutz', locale);

const labels = {
  de: { title: 'Datenschutzerklärung', description: 'Datenschutzerklärung der Microvista GmbH', breadcrumb: 'Datenschutz' },
  en: { title: 'Privacy Policy', description: 'Privacy policy of Microvista GmbH', breadcrumb: 'Privacy' },
  fr: { title: 'Politique de confidentialité', description: 'Politique de confidentialité de Microvista GmbH', breadcrumb: 'Confidentialité' },
  es: { title: 'Política de privacidad', description: 'Política de privacidad de Microvista GmbH', breadcrumb: 'Privacidad' },
  it: { title: 'Informativa sulla privacy', description: 'Informativa sulla privacy di Microvista GmbH', breadcrumb: 'Privacy' }
}[locale] || { title: 'Datenschutzerklärung', description: 'Datenschutzerklärung der Microvista GmbH', breadcrumb: 'Datenschutz' };
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="legal-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.breadcrumb }]} />
      <article class="legal-content" set:html={content} />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .legal-page { padding-bottom: var(--space-16); }
  .legal-content { max-width: 800px; margin: 0 auto; padding: var(--space-8) 0; }
  .legal-content :global(h1) { margin-bottom: var(--space-8); }
  .legal-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .legal-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .legal-content :global(p), .legal-content :global(li) { line-height: 1.8; margin-bottom: var(--space-4); }
  .legal-content :global(ul) { padding-left: var(--space-6); }
</style>
