---

<LaborLayout 
  title={locale === 'de' ? 'CT-Labor f√ºr Erstmusterpr√ºfung' : 'CT Lab for First Article Inspection'}
  description={t.subline}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <span class="badge">{t.badge}</span>
        <h1>
          {t.headline}
          <span class="accent">{t.headlineAccent}</span>
        </h1>
        <p class="subline">{t.subline}</p>
        <div class="hero-cta">
          <a href="/labor/kontakt/" class="btn btn-primary btn-lg">{t.cta1}</a>
