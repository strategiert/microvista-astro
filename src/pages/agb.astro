---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('agb', locale);

const labels = {
  de: { title: 'AGB', description: 'Allgemeine Geschäftsbedingungen der Microvista GmbH' },
  en: { title: 'Terms and Conditions', description: 'General terms and conditions of Microvista GmbH' },
  fr: { title: 'Conditions générales', description: 'Conditions générales de Microvista GmbH' },
  es: { title: 'Términos y condiciones', description: 'Términos y condiciones de Microvista GmbH' },
  it: { title: 'Termini e condizioni', description: 'Termini e condizioni di Microvista GmbH' }
}[locale] || { title: 'AGB', description: 'Allgemeine Geschäftsbedingungen der Microvista GmbH' };
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="legal-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.title }]} />
      <article class="legal-content" set:html={content} />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .legal-page { padding-bottom: var(--space-16); }
  .legal-content { max-width: 800px; margin: 0 auto; padding: var(--space-8) 0; }
  .legal-content :global(h1) { margin-bottom: var(--space-8); }
  .legal-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .legal-content :global(p), .legal-content :global(li) { line-height: 1.8; margin-bottom: var(--space-4); }
  .legal-content :global(ol), .legal-content :global(ul) { padding-left: var(--space-6); }
</style>
