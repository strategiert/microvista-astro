---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('pressemitteilungen', locale);

const labels = {
  de: {
    title: 'Pressemitteilungen',
    description: 'Offizielle Pressemitteilungen der Microvista GmbH.',
    breadcrumb: 'Pressemitteilungen'
  },
  en: {
    title: 'Press Releases',
    description: 'Official press releases from Microvista GmbH.',
    breadcrumb: 'Press Releases'
  },
  fr: {
    title: 'Communiqués de presse',
    description: 'Communiqués de presse officiels de Microvista GmbH.',
    breadcrumb: 'Communiqués'
  },
  es: {
    title: 'Comunicados de prensa',
    description: 'Comunicados de prensa oficiales de Microvista GmbH.',
    breadcrumb: 'Comunicados'
  },
  it: {
    title: 'Comunicati stampa',
    description: 'Comunicati stampa ufficiali di Microvista GmbH.',
    breadcrumb: 'Comunicati stampa'
  }
}[locale] || {
  title: 'Pressemitteilungen',
  description: 'Offizielle Pressemitteilungen der Microvista GmbH.',
  breadcrumb: 'Pressemitteilungen'
};
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="static-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.breadcrumb }]} />
      <article class="static-content">
        {content ? <div set:html={content} /> : <p>Inhalt folgt in Kürze.</p>}
      </article>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .static-page { padding-bottom: var(--space-16); }
  .static-content { max-width: 900px; margin: 0 auto; padding: var(--space-8) 0; }
  .static-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); }
  .static-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .static-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .static-content :global(p) { line-height: 1.8; margin-bottom: var(--space-4); }
  .static-content :global(img) { max-width: 100%; height: auto; border-radius: var(--radius-xl); }
</style>
