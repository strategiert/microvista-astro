---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';

const locale = Astro.currentLocale || 'de';
const content = await loadStaticPage(locale === 'en' ? 'faq-en.md' : 'faq-de.md');

const title = locale === 'en' ? 'FAQ' : 'Häufig gestellte Fragen';
const description = locale === 'en'
  ? 'Frequently asked questions about industrial computed tomography at Microvista.'
  : 'Häufig gestellte Fragen zur industriellen Computertomographie bei Microvista.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <div class="faq-page">
    <div class="container">
      <Breadcrumbs items={[{ label: 'FAQ' }]} />
      <article class="faq-content" set:html={content} />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .faq-page { padding-bottom: var(--space-16); }
  .faq-content { max-width: 800px; margin: 0 auto; padding: var(--space-8) 0; }
  .faq-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); }
  .faq-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .faq-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .faq-content :global(p) { line-height: 1.8; margin-bottom: var(--space-4); }
</style>
