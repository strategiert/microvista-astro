<style>
  .hero {
    position: relative;
    padding: var(--space-24) 0;
    background: linear-gradient(135deg, var(--background) 0%, var(--primary) 50%, rgba(249, 115, 22, 0.2) 100%);
    color: white;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    opacity: 0.2;
    background-image: 
      linear-gradient(rgba(249, 115, 22, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(249, 115, 22, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }
  
  .hero-content {
    position: relative;
    max-width: 700px;
  }
  
  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(249, 115, 22, 0.2);
    border: 1px solid rgba(249, 115, 22, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--accent);
    margin-bottom: var(--space-6);
  }
  
  .hero h1 {
    font-size: clamp(var(--text-4xl), 6vw, var(--text-6xl));
    color: white;
    margin-bottom: var(--space-6);
  }
  
  .hero h1 .accent {
    display: block;
    color: var(--accent);
  }
  
  .subline {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-8);
    line-height: 1.6;
  }
  
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .hero .btn-primary {
    background: var(--accent);
    color: #000;
    font-weight: 600;
  }
  
  .hero .btn-secondary {
    border-color: var(--border);
    color: white;
  }
  
  .hero .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .stats-bar {
    background: var(--primary);
    border-top: 1px solid rgba(249, 115, 22, 0.2);
    border-bottom: 1px solid rgba(249, 115, 22, 0.2);
    padding: var(--space-8) 0;
  }
  
  .stats-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-12);
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-value {
    display: block;
    font-size: var(--text-4xl);
    font-weight: 700;
    font-family: var(--font-heading);
    color: var(--accent);
  }
  
  .stat-label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }
  
  .services {
    background: var(--background);
  }
  
  .section-header {
    margin-bottom: var(--space-12);
  }
  
  .section-header h2 {
    color: var(--text);
    margin-bottom: var(--space-4);
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }
  
  .service-card {
    text-decoration: none;
    color: inherit;
    background: var(--surface);
    border-color: var(--border);
  }
  
  .service-card:hover {
    border-color: var(--accent);
  }
  
  .service-card h3 {
    color: var(--text);
    margin-bottom: var(--space-3);
    transition: color var(--transition-fast);
  }
  
  .service-card:hover h3 {
    color: var(--accent);
  }
  
  .service-card p {
    color: var(--text-muted);
    margin-bottom: var(--space-4);
  }
  
  .card-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--accent);
    font-weight: 600;
  }
  
  .service-card:hover .card-link svg {
    transform: translateX(4px);
  }
  
  .card-link svg {
    transition: transform var(--transition-fast);
  }
  
  .cross-sell {
    padding: var(--space-8) 0;
    background: var(--surface);
  }
  
  .cross-sell-box {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-6);
    padding: var(--space-6);
    background: var(--background);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border);
  }
  
  .cross-sell-icon {
    font-size: var(--text-2xl);
  }
  
  .cross-sell-content {
    flex: 1;
    min-width: 200px;
  }
  
  .cross-sell-content strong {
    color: var(--text);
  }
  
  .cross-sell-content p {
    color: var(--text-muted);
    margin: 0;
  }
  
  .cross-sell .btn-secondary {
    border-color: var(--accent);
    color: var(--accent);
  }
  
  .cta-section {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, var(--primary) 0%, rgba(249, 115, 22, 0.3) 100%);
    color: white;
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    color: white;
    margin-bottom: var(--space-4);
  }
  
  .cta-content p {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-8);
  }
  
  .cta-content .btn-primary {
    background: var(--accent);
    color: #000;
    font-weight: 600;
  }
</style>
