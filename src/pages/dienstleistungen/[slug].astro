---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Breadcrumbs from '../../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../../lib/load-static-page';
import { localePath, type Locale } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);

const services: Record<string, { name: Record<string, string>; seoDesc: Record<string, string>; file: string }> = {
  'ct-labor': {
    name: {
      de: 'CT-Labor',
      en: 'CT Laboratory',
      fr: 'Laboratoire CT',
      es: 'Laboratorio CT',
      it: 'Laboratorio CT'
    },
    seoDesc: {
      de: 'CT-Labor der Microvista GmbH — akkreditiert nach ISO 17025. Hochauflösende industrielle CT-Scans.',
      en: 'CT Laboratory of Microvista GmbH — accredited to ISO 17025. High-resolution industrial CT scans.',
      fr: 'Laboratoire CT de Microvista GmbH — accrédité ISO 17025. Scans CT industriels haute résolution.',
      es: 'Laboratorio CT de Microvista GmbH — acreditado según ISO 17025. Escaneos CT industriales de alta resolución.',
      it: 'Laboratorio CT di Microvista GmbH — accreditato ISO 17025. Scansioni CT industriali ad alta risoluzione.'
    },
    file: 'dienstleistung-ct-labor.md',
  },
  'ct-datenauswertung': {
    name: {
      de: 'CT-Datenauswertung',
      en: 'CT Data Analysis',
      fr: 'Analyse des données CT',
      es: 'Análisis de datos CT',
      it: 'Analisi dati CT'
    },
    seoDesc: {
      de: 'CT-Datenauswertung bei Microvista — Porositätsanalyse, CAD-Vergleich, Wanddickenmessung und mehr.',
      en: 'CT data analysis at Microvista — porosity analysis, CAD comparison, wall thickness measurement and more.',
      fr: 'Analyse de données CT chez Microvista — porosité, comparaison CAO, mesure d’épaisseur et plus.',
      es: 'Análisis de datos CT en Microvista: porosidad, comparación CAD, medición de espesor y más.',
      it: 'Analisi dati CT in Microvista — porosità, confronto CAD, misura spessori e altro.'
    },
    file: 'dienstleistung-ct-datenauswertung.md',
  },
  'scanexpress': {
    name: {
      de: 'SCANEXPRESS — Mobiles industrielles CT',
      en: 'SCANEXPRESS — Mobile Industrial CT',
      fr: 'SCANEXPRESS — CT industriel mobile',
      es: 'SCANEXPRESS — CT industrial móvil',
      it: 'SCANEXPRESS — CT industriale mobile'
    },
    seoDesc: {
      de: 'SCANEXPRESS — mobiles industrielles CT von Microvista. CT-Prüfung direkt vor Ort, flexibel mietbar.',
      en: 'SCANEXPRESS — mobile industrial CT by Microvista. CT inspection on-site, flexibly rentable.',
      fr: 'SCANEXPRESS — CT industriel mobile de Microvista. Contrôle CT sur site, location flexible.',
      es: 'SCANEXPRESS — CT industrial móvil de Microvista. Inspección CT in situ con alquiler flexible.',
      it: 'SCANEXPRESS — CT industriale mobile di Microvista. Ispezione CT in loco, noleggio flessibile.'
    },
    file: 'dienstleistung-scanexpress.md',
  },
};

const { slug } = Astro.params;
const service = services[slug!];
if (!service) return Astro.redirect('/dienstleistungen/');

const name = service.name[locale] || service.name.en || service.name.de;
const seoDesc = service.seoDesc[locale] || service.seoDesc.en || service.seoDesc.de;
const content = await loadStaticPage(service.file);

const ui = {
  de: {
    services: 'Dienstleistungen',
    interested: 'Interessiert?',
    contactText: 'Kontaktieren Sie uns für eine unverbindliche Beratung.',
    contactBtn: 'Jetzt anfragen'
  },
  en: {
    services: 'Services',
    interested: 'Interested?',
    contactText: 'Contact us for a non-binding consultation.',
    contactBtn: 'Get in touch'
  },
  fr: {
    services: 'Services',
    interested: 'Intéressé ?',
    contactText: 'Contactez-nous pour un conseil sans engagement.',
    contactBtn: 'Nous contacter'
  },
  es: {
    services: 'Servicios',
    interested: '¿Interesado?',
    contactText: 'Contáctenos para una consulta sin compromiso.',
    contactBtn: 'Contactar'
  },
  it: {
    services: 'Servizi',
    interested: 'Interessato?',
    contactText: 'Contattaci per una consulenza senza impegno.',
    contactBtn: 'Contattaci'
  }
}[locale] || {
  services: 'Services',
  interested: 'Interested?',
  contactText: 'Contact us for a non-binding consultation.',
  contactBtn: 'Get in touch'
};
---

<BaseLayout title={name} description={seoDesc}>
  <Header slot="header" />

  <div class="service-page">
    <div class="container">
      <Breadcrumbs items={[
        { label: ui.services, href: lp('/dienstleistungen') },
        { label: name }
      ]} />

      <article class="service-content" set:html={content} />

      <section class="cta-section">
        <h2>{ui.interested}</h2>
        <p>{ui.contactText}</p>
        <a href={lp('/kontakt')} class="btn btn-primary">
          {ui.contactBtn}
        </a>
      </section>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .service-page { padding-bottom: var(--space-16); }
  .service-content { max-width: 800px; margin: 0 auto; padding: var(--space-8) 0; line-height: 1.8; }
  .service-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); }
  .service-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .service-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .service-content :global(p) { margin-bottom: var(--space-4); }
  .service-content :global(img) { max-width: 100%; height: auto; border-radius: var(--radius-lg); margin: var(--space-4) 0; }
  .service-content :global(ul), .service-content :global(ol) { padding-left: var(--space-6); margin-bottom: var(--space-4); }
  .service-content :global(li) { margin-bottom: var(--space-2); }
  .cta-section {
    text-align: center;
    background: var(--surface, #f8fafc);
    border-radius: var(--radius-xl);
    padding: var(--space-12);
    margin-top: var(--space-16);
  }
  .cta-section h2 { margin-bottom: var(--space-3); }
  .cta-section p { color: var(--text-muted); margin-bottom: var(--space-6); }
</style>
