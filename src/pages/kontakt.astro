---

<BaseLayout
  title={t.title}
  description={t.description}
>
  <Header slot="header" />

  <div class="contact-page">
    <div class="container">
      <Breadcrumbs items={[
        { label: t.title }
      ]} />

      <!-- Hero -->
      <section class="page-hero">
        <h1>{t.subtitle}</h1>
        <p>{t.description}</p>
      </section>

      <!-- Main Content -->
      <div class="contact-grid">
        <!-- Form -->
        <section class="contact-form-section">
          <h2>{t.formTitle}</h2>
          <ContactForm />
        </section>

        <!-- Info -->
        <aside class="contact-info">
          <h2>{t.infoTitle}</h2>

          <div class="info-card">
            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.email}</span>
                <a href="mailto:vertrieb@microvista.de">vertrieb@microvista.de</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.phone}</span>
                <a href="tel:+4939449505036">+49 3944 950-36</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.address}</span>
                <address>
                  Microvista GmbH<br>
                  Am Münchenfelde 12<br>
                  38889 Blankenburg<br>
                  Deutschland
                </address>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.hours}</span>
                <span>{t.hoursValue}</span>
              </div>
            </div>
          </div>

          <!-- Ansprechpartner -->
          <div class="team-contacts">
            <h3>{t.teamTitle}</h3>
            {[contacts.sales, contacts.ceo].map(person => (
              <div class="team-contact-card">
                <img src={person.img} alt={person.name} class="team-avatar" loading="lazy" />
                <div class="team-contact-info">
                  <strong>{person.name}</strong>
                  <span class="team-role">{person.role[locale as keyof typeof person.role]}</span>
                  <a href={`tel:${person.phone.replace(/[^+\d]/g, '')}`}>{person.phone}</a>
                  <a href={`mailto:${person.email}`}>{person.email}</a>
                </div>
              </div>
            ))}
            <a
              href="https://outlook.office365.com/owa/calendar/MicrovistazerstrungsfreiePrfung@netco.de/bookings/"
              target="_blank"
              rel="noopener noreferrer"
              class="teams-btn"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
