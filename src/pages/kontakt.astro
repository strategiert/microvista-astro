---
/**
 * Kontakt-Seite
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import ContactForm from '../components/forms/ContactForm.astro';

const locale = Astro.currentLocale || 'de';

const content = {
  de: {
    title: 'Kontakt',
    subtitle: 'Sprechen Sie mit unseren Experten',
    description: 'Haben Sie Fragen zu unseren CT-Lösungen? Wir helfen Ihnen gerne weiter.',
    formTitle: 'Schreiben Sie uns',
    infoTitle: 'Kontaktinformationen',
    email: 'E-Mail',
    phone: 'Telefon',
    address: 'Adresse',
    hours: 'Erreichbarkeit',
    hoursValue: 'Mo-Fr: 8:00-17:00 Uhr',
    quickLinks: 'Schnellzugriff',
    links: [
      { label: 'Labor-Anfrage', href: '/labor/kontakt' },
      { label: 'Serie-Anfrage', href: '/serie/kontakt' },
      { label: 'Support', href: '/support' }
    ]
  },
  en: {
    title: 'Contact',
    subtitle: 'Talk to our experts',
    description: 'Do you have questions about our CT solutions? We are happy to help.',
    formTitle: 'Write to us',
    infoTitle: 'Contact Information',
    email: 'Email',
    phone: 'Phone',
    address: 'Address',
    hours: 'Availability',
    hoursValue: 'Mon-Fri: 8:00-17:00',
    quickLinks: 'Quick Links',
    links: [
      { label: 'Lab Inquiry', href: '/labor/kontakt' },
      { label: 'Series Inquiry', href: '/serie/kontakt' },
      { label: 'Support', href: '/support' }
    ]
  }
};

const t = content[locale as keyof typeof content] || content.de;
---

<BaseLayout
  title={t.title}
  description={t.description}
>
  <Header slot="header" />

  <div class="contact-page">
    <div class="container">
      <Breadcrumbs items={[
        { label: t.title }
      ]} />

      <!-- Hero -->
      <section class="page-hero">
        <h1>{t.subtitle}</h1>
        <p>{t.description}</p>
      </section>

      <!-- Main Content -->
      <div class="contact-grid">
        <!-- Form -->
        <section class="contact-form-section">
          <h2>{t.formTitle}</h2>
          <ContactForm />
        </section>

        <!-- Info -->
        <aside class="contact-info">
          <h2>{t.infoTitle}</h2>

          <div class="info-card">
            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.email}</span>
                <a href="mailto:info@microvista.de">info@microvista.de</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.phone}</span>
                <a href="tel:+4912345678">+49 123 456 78</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.address}</span>
                <address>
                  Microvista GmbH<br>
                  Musterstraße 123<br>
                  12345 Musterstadt
                </address>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <div>
                <span class="info-label">{t.hours}</span>
                <span>{t.hoursValue}</span>
              </div>
            </div>
          </div>

          <div class="quick-links">
            <h3>{t.quickLinks}</h3>
            <ul>
              {t.links.map(link => (
                <li>
                  <a href={link.href}>
                    {link.label}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-page {
    padding-bottom: var(--space-16);
  }

  .page-hero {
    text-align: center;
    padding: var(--space-12) 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .page-hero h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .page-hero p {
    font-size: var(--text-xl);
    color: var(--text-muted);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    margin-top: var(--space-8);
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .contact-form-section h2,
  .contact-info h2 {
    margin-bottom: var(--space-6);
  }

  .info-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .info-item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--border);
  }

  .info-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .info-item:first-child {
    padding-top: 0;
  }

  .info-icon {
    width: 40px;
    height: 40px;
    background: rgba(124, 58, 237, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    flex-shrink: 0;
  }

  .info-label {
    display: block;
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }

  .info-item a {
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
  }

  .info-item a:hover {
    color: var(--primary);
  }

  .info-item address {
    font-style: normal;
    line-height: 1.6;
  }

  .quick-links h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .quick-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .quick-links li {
    margin-bottom: var(--space-2);
  }

  .quick-links a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    color: var(--text);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .quick-links a:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .quick-links a svg {
    opacity: 0;
    transform: translateX(-4px);
    transition: all var(--transition-fast);
  }

  .quick-links a:hover svg {
    opacity: 1;
    transform: translateX(0);
  }
</style>
