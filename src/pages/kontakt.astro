                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              {t.teamsLabel}
            </a>
          </div>

          <div class="quick-links">
            <h3>{t.quickLinks}</h3>
            <ul>
              {t.links.map(link => (
                <li>
                  <a href={lp(link.href)}>
                    {link.label}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-page {
    padding-bottom: var(--space-16);
  }

  .page-hero {
    text-align: center;
    padding: var(--space-12) 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .page-hero h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .page-hero p {
    font-size: var(--text-xl);
    color: var(--text-muted);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    margin-top: var(--space-8);
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .contact-form-section h2,
  .contact-info h2 {
    margin-bottom: var(--space-6);
  }

  .info-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .info-item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--border);
  }

  .info-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .info-item:first-child {
    padding-top: 0;
  }

  .info-icon {
    width: 40px;
    height: 40px;
    background: rgba(124, 58, 237, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    flex-shrink: 0;
  }

  .info-label {
    display: block;
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }

  .info-item a {
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
  }

  .info-item a:hover {
    color: var(--primary);
  }

  .info-item address {
    font-style: normal;
    line-height: 1.6;
  }

  /* Ansprechpartner */
  .team-contacts {
    margin-bottom: var(--space-8);
  }

  .team-contacts h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .team-contact-card {
    display: flex;
    gap: var(--space-4);
    align-items: center;
    padding: var(--space-4);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-3);
  }

  .team-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .team-contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .team-contact-info strong {
    font-size: var(--text-base);
    color: var(--text);
  }

  .team-role {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .team-contact-info a {
    font-size: var(--text-sm);
    color: var(--primary);
    text-decoration: none;
  }

  .team-contact-info a:hover {
    text-decoration: underline;
  }

  .teams-btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    width: 100%;
    padding: var(--space-3) var(--space-4);
    background: #5558AF;
    color: white;
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: 600;
    margin-top: var(--space-3);
    transition: background var(--transition-fast);
    justify-content: center;
  }

  .teams-btn:hover {
    background: #444795;
  }

  .quick-links h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .quick-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .quick-links li {
    margin-bottom: var(--space-2);
  }

  .quick-links a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    color: var(--text);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .quick-links a:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .quick-links a svg {
    opacity: 0;
    transform: translateX(-4px);
    transition: all var(--transition-fast);
  }

  .quick-links a:hover svg {
    opacity: 1;
    transform: translateX(0);
  }
</style>
