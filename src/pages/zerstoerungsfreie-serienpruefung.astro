---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import { loadStaticPage } from '../lib/load-static-page';
import { type Locale } from '../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const content = await loadStaticPage('zerstoerungsfreie-serienpruefung', locale);

const labels = {
  de: {
    title: 'Zerstörungsfreie Serienprüfung',
    description: 'Informationen zur zerstörungsfreien Serienprüfung bei Microvista.',
    breadcrumb: 'Zerstörungsfreie Serienprüfung'
  },
  en: {
    title: 'Non-Destructive Serial Inspection',
    description: 'Information about non-destructive serial inspection at Microvista.',
    breadcrumb: 'Serial Inspection'
  },
  fr: {
    title: 'Contrôle en série non destructif',
    description: 'Informations sur le contrôle en série non destructif chez Microvista.',
    breadcrumb: 'Contrôle en série'
  },
  es: {
    title: 'Inspección en serie no destructiva',
    description: 'Información sobre inspección en serie no destructiva en Microvista.',
    breadcrumb: 'Inspección en serie'
  },
  it: {
    title: 'Controllo in serie non distruttivo',
    description: 'Informazioni sul controllo in serie non distruttivo in Microvista.',
    breadcrumb: 'Controllo in serie'
  }
}[locale] || {
  title: 'Zerstörungsfreie Serienprüfung',
  description: 'Informationen zur zerstörungsfreien Serienprüfung bei Microvista.',
  breadcrumb: 'Zerstörungsfreie Serienprüfung'
};
---

<BaseLayout title={labels.title} description={labels.description}>
  <Header slot="header" />

  <div class="static-page">
    <div class="container">
      <Breadcrumbs items={[{ label: labels.breadcrumb }]} />
      <article class="static-content">
        {content ? <div set:html={content} /> : <p>Inhalt folgt in Kürze.</p>}
      </article>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .static-page { padding-bottom: var(--space-16); }
  .static-content { max-width: 900px; margin: 0 auto; padding: var(--space-8) 0; }
  .static-content :global(h1) { font-size: var(--text-4xl); margin-bottom: var(--space-8); }
  .static-content :global(h2) { margin-top: var(--space-8); margin-bottom: var(--space-4); }
  .static-content :global(h3) { margin-top: var(--space-6); margin-bottom: var(--space-3); }
  .static-content :global(p) { line-height: 1.8; margin-bottom: var(--space-4); }
  .static-content :global(img) { max-width: 100%; height: auto; border-radius: var(--radius-xl); }
</style>
