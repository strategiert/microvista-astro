---
/**
 * Wiederverwendbare Card Komponente
 */
interface Props {
  href?: string;
  variant?: 'default' | 'featured' | 'compact';
  class?: string;
}

const { href, variant = 'default', class: className } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={['card', `card-${variant}`, className]}
>
  <slot name="image" />
  <div class="card-content">
    <slot name="meta" />
    <slot name="title" />
    <slot name="description" />
    <slot />
    <slot name="footer" />
  </div>
</Tag>

<style>
  .card {
    display: block;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  a.card {
    text-decoration: none;
    color: inherit;
  }

  a.card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .card-content {
    padding: var(--space-6);
  }

  .card-compact .card-content {
    padding: var(--space-4);
  }

  .card-featured {
    border-color: var(--primary);
    background: linear-gradient(135deg, var(--surface) 0%, rgba(124, 58, 237, 0.05) 100%);
  }

  /* Slot styles */
  .card :global([slot="image"]) {
    aspect-ratio: 16/9;
    object-fit: cover;
    width: 100%;
  }

  .card :global([slot="meta"]) {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .card :global([slot="title"]) {
    font-family: var(--font-heading);
    font-weight: 600;
    color: var(--text);
    margin-bottom: var(--space-2);
  }

  a.card:hover :global([slot="title"]) {
    color: var(--primary);
  }

  .card :global([slot="description"]) {
    color: var(--text-muted);
    font-size: var(--text-sm);
    line-height: 1.6;
  }

  .card :global([slot="footer"]) {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border);
  }
</style>
