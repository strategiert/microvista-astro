---
/**
 * Tag/Badge Komponente f√ºr Kategorien, Tags, Status
 */
interface Props {
  href?: string;
  variant?: 'default' | 'primary' | 'labor' | 'serie' | 'success' | 'warning';
  size?: 'sm' | 'md';
}

const { href, variant = 'default', size = 'md' } = Astro.props;
const Tag = href ? 'a' : 'span';
---

<Tag
  href={href}
  class:list={['tag', `tag-${variant}`, `tag-${size}`]}
>
  <slot />
</Tag>

<style>
  .tag {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-weight: 500;
    border-radius: var(--radius-full);
    white-space: nowrap;
  }

  a.tag {
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  /* Sizes */
  .tag-sm {
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-xs);
  }

  .tag-md {
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-sm);
  }

  /* Variants */
  .tag-default {
    background: var(--surface);
    color: var(--text-muted);
    border: 1px solid var(--border);
  }

  a.tag-default:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .tag-primary {
    background: rgba(124, 58, 237, 0.1);
    color: #7C3AED;
  }

  .tag-labor {
    background: rgba(0, 180, 216, 0.1);
    color: #00B4D8;
  }

  .tag-serie {
    background: rgba(249, 115, 22, 0.1);
    color: #F97316;
  }

  .tag-success {
    background: rgba(34, 197, 94, 0.1);
    color: #22C55E;
  }

  .tag-warning {
    background: rgba(234, 179, 8, 0.1);
    color: #EAB308;
  }
</style>
