---
/**
 * Globaler Footer - 5 Sprachen
 */
import { translations, type Locale, localePath } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);
const currentYear = new Date().getFullYear();

const nav = translations.nav;
const laborNav = translations.laborNav;
const serieNav = translations.serieNav;
const footer = translations.footer;
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <a href={lp('/')} class="logo" aria-label="Microvista">
          <img
            class="logo-image"
            src="/images/logos/2024_08-MV-Logo_weiss.png"
            alt="Microvista"
            width="705"
            height="399"
            loading="lazy"
          />
        </a>
        <p class="tagline">{footer.tagline[locale]}</p>
      </div>

      <!-- Links -->
      <div class="footer-links">
        <div class="link-group">
          <h4>{nav.labor[locale]}</h4>
          <ul>
            <li><a href={lp('/labor/erstmusterpruefung')}>{laborNav.erstmusterpruefung[locale]}</a></li>
            <li><a href={lp('/labor/schadensanalyse')}>{laborNav.schadensanalyse[locale]}</a></li>
            <li><a href={lp('/labor/reverse-engineering')}>{laborNav.reverseEngineering[locale]}</a></li>
            <li><a href={lp('/kontakt')}>{nav.kontakt[locale]}</a></li>
          </ul>
        </div>

        <div class="link-group">
          <h4>{nav.serie[locale]}</h4>
          <ul>
            <li><a href={lp('/serie/inline-ct')}>{serieNav.inlineCt[locale]}</a></li>
            <li><a href={lp('/serie/100-prozent-pruefung')}>{serieNav.hundertProzent[locale]}</a></li>
            <li><a href={lp('/serie/ki-automatisierung')}>{serieNav.kiAutomatisierung[locale]}</a></li>
            <li><a href={lp('/kontakt')}>{nav.kontakt[locale]}</a></li>
          </ul>
        </div>

        <div class="link-group">
          <h4>{footer.ressourcen[locale]}</h4>
          <ul>
            <li><a href={lp('/magazin')}>{nav.magazin[locale]}</a></li>
            <li><a href={lp('/wiki')}>{nav.wiki[locale]}</a></li>
            <li><a href={lp('/branchen')}>{nav.branchen[locale]}</a></li>
            <li><a href={lp('/dienstleistungen')}>{footer.downloads[locale]}</a></li>
          </ul>
        </div>

        <div class="link-group">
          <h4>{nav.unternehmen[locale]}</h4>
          <ul>
            <li><a href={lp('/team')}>{footer.ueberUns[locale]}</a></li>
            <li><a href={lp('/zertifizierungen')}>{footer.zertifizierungen[locale]}</a></li>
            <li><a href={lp('/impressum')}>{footer.impressum[locale]}</a></li>
            <li><a href={lp('/datenschutz')}>{footer.datenschutz[locale]}</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">Â© {currentYear} Microvista GmbH. {footer.copyright[locale]}</p>
      <div class="social-links">
        <a href="https://linkedin.com/company/microvista" target="_blank" rel="noopener" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--primary);
    color: white;
    padding: var(--space-16) 0 var(--space-8);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 2fr;
    }
  }

  .footer-brand .logo {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    margin-bottom: var(--space-4);
  }

  .footer-brand .logo-image {
    display: block;
    width: auto;
    height: 46px;
  }

  .tagline {
    color: rgba(255,255,255,0.6);
    max-width: 280px;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  @media (min-width: 768px) {
    .footer-links {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .link-group h4 {
    color: white;
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }

  .link-group ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .link-group li {
    margin-bottom: var(--space-2);
  }

  .link-group a {
    color: rgba(255,255,255,0.6);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .link-group a:hover {
    color: white;
  }

  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .copyright {
    color: rgba(255,255,255,0.4);
    font-size: var(--text-sm);
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: var(--space-4);
  }

  .social-links a {
    color: rgba(255,255,255,0.6);
    transition: color var(--transition-fast);
  }

  .social-links a:hover {
    color: white;
  }
</style>
