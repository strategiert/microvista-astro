---
import { localePath, type Locale } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);

const nav = {
  de: [
    { label: 'Erstmusterprüfung', href: '/labor/erstmusterpruefung' },
    { label: 'Schadensanalyse', href: '/labor/schadensanalyse' },
    { label: 'Reverse Engineering', href: '/labor/reverse-engineering' },
    { label: 'Kontakt', href: '/kontakt' },
  ],
  en: [
    { label: 'First Article Inspection', href: '/labor/erstmusterpruefung' },
    { label: 'Failure Analysis', href: '/labor/schadensanalyse' },
    { label: 'Reverse Engineering', href: '/labor/reverse-engineering' },
    { label: 'Contact', href: '/kontakt' },
  ],
  fr: [
    { label: 'Inspection premier article', href: '/labor/erstmusterpruefung' },
    { label: 'Analyse de défaillance', href: '/labor/schadensanalyse' },
    { label: 'Rétro-ingénierie', href: '/labor/reverse-engineering' },
    { label: 'Contact', href: '/kontakt' },
  ],
  es: [
    { label: 'Inspección de primera muestra', href: '/labor/erstmusterpruefung' },
    { label: 'Análisis de fallas', href: '/labor/schadensanalyse' },
    { label: 'Ingeniería inversa', href: '/labor/reverse-engineering' },
    { label: 'Contacto', href: '/kontakt' },
  ],
  it: [
    { label: 'Ispezione primo articolo', href: '/labor/erstmusterpruefung' },
    { label: 'Analisi dei guasti', href: '/labor/schadensanalyse' },
    { label: 'Reverse engineering', href: '/labor/reverse-engineering' },
    { label: 'Contatto', href: '/kontakt' },
  ]
};

const items = nav[locale] || nav.en;

const labels = {
  de: { sub: 'Labor & Erstmuster', switch: '→ Serienprüfung', cta: 'Anfrage stellen' },
  en: { sub: 'Lab & First Article', switch: '→ Serial Inspection', cta: 'Request Quote' },
  fr: { sub: 'Laboratoire & Premier article', switch: '→ Inspection en série', cta: 'Demander un devis' },
  es: { sub: 'Laboratorio y primera muestra', switch: '→ Inspección en serie', cta: 'Solicitar cotización' },
  it: { sub: 'Laboratorio e primo articolo', switch: '→ Controllo in serie', cta: 'Richiedi preventivo' }
}[locale] || { sub: 'Lab & First Article', switch: '→ Serial Inspection', cta: 'Request Quote' };
---

<header class="header-labor">
  <div class="container">
    <div class="header-inner">
      <a href={lp('/')} class="logo" aria-label="Microvista">
        <img
          class="logo-image"
          src="/images/logos/2013-08-microvista_Logo_RGB-7.png"
          alt="Microvista"
          width="705"
          height="399"
          loading="eager"
        />
        <span class="logo-sub">{labels.sub}</span>
      </a>
      
      <nav class="main-nav">
        {items.map(item => (
          <a href={lp(item.href)} class="nav-link">{item.label}</a>
        ))}
      </nav>
      
      <div class="header-actions">
        <a href={lp('/serie')} class="switch-world">
          <span>{labels.switch}</span>
        </a>
        <a href={lp('/kontakt')} class="btn btn-primary">
          {labels.cta}
        </a>
      </div>
      
      <button class="mobile-menu-btn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header-labor {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--mv-white);
    border-bottom: 1px solid var(--mv-gray-200);
    padding: var(--space-4) 0;
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }
  
  .logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-4);
    text-decoration: none;
  }

  .logo-image {
    display: block;
    width: auto;
    height: 42px;
  }
  
  .logo-sub {
    font-size: var(--text-xs);
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 640px) {
    .logo-sub {
      display: none;
    }
  }
  
  .main-nav {
    display: none;
    align-items: center;
    gap: var(--space-1);
  }
  
  @media (min-width: 1024px) {
    .main-nav {
      display: flex;
    }
  }
  
  .nav-link {
    padding: var(--space-2) var(--space-4);
    color: var(--text);
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }
  
  .nav-link:hover {
    background: var(--surface);
    color: var(--primary);
  }
  
  .header-actions {
    display: none;
    align-items: center;
    gap: var(--space-4);
  }
  
  @media (min-width: 1024px) {
    .header-actions {
      display: flex;
    }
  }
  
  .switch-world {
    font-size: var(--text-sm);
    color: var(--text-muted);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    transition: all var(--transition-fast);
  }
  
  .switch-world:hover {
    border-color: var(--accent);
    color: var(--accent);
  }
  
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: var(--space-2);
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--text);
    border-radius: 2px;
    transition: all var(--transition-fast);
  }
  
  @media (min-width: 1024px) {
    .mobile-menu-btn {
      display: none;
    }
  }
</style>
