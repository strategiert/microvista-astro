---
import { localePath, type Locale } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);
const year = new Date().getFullYear();

const labels = {
  de: { serie: 'Serie Services', industries: 'Branchen', company: 'Unternehmen', rights: 'Alle Rechte vorbehalten.' },
  en: { serie: 'Series Services', industries: 'Industries', company: 'Company', rights: 'All rights reserved.' },
  fr: { serie: 'Services série', industries: 'Secteurs', company: 'Entreprise', rights: 'Tous droits réservés.' },
  es: { serie: 'Servicios de serie', industries: 'Sectores', company: 'Empresa', rights: 'Todos los derechos reservados.' },
  it: { serie: 'Servizi di serie', industries: 'Settori', company: 'Azienda', rights: 'Tutti i diritti riservati.' }
}[locale] || { serie: 'Series Services', industries: 'Industries', company: 'Company', rights: 'All rights reserved.' };
---

<footer class="footer-serie">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href={lp('/')} class="logo" aria-label="Microvista">
          <img
            class="logo-image"
            src="/images/logos/2024_08-MV-Logo_weiss.png"
            alt="Microvista"
            width="705"
            height="399"
            loading="lazy"
          />
        </a>
        <p class="tagline">100% Qualität. 0% Stillstand.</p>
        <div class="contact-info">
          <p>Microvista GmbH</p>
          <p>Am Mönchenfelde 12</p>
          <p>38889 Blankenburg</p>
          <p><a href="tel:+49394495050">+49 3944 950-50</a></p>
          <p><a href="mailto:vertrieb@microvista.de">vertrieb@microvista.de</a></p>
        </div>
      </div>
      
      <div class="footer-links">
        <h4>{labels.serie}</h4>
        <ul>
          <li><a href={lp('/serie/inline-ct')}>Inline-CT</a></li>
          <li><a href={lp('/serie/100-prozent-pruefung')}>100% Prüfung</a></li>
          <li><a href={lp('/serie/ki-automatisierung')}>KI-Automatisierung</a></li>
          <li><a href={lp('/kontakt')}>Kontakt</a></li>
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>{labels.industries}</h4>
        <ul>
          <li><a href={lp('/branchen/automotive')}>Automotive</a></li>
          <li><a href={lp('/branchen/luftfahrt')}>Luftfahrt</a></li>
          <li><a href={lp('/branchen/batteriesysteme')}>Batteriesysteme</a></li>
          <li><a href={lp('/branchen/additive-fertigung')}>Additive Fertigung</a></li>
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>{labels.company}</h4>
        <ul>
          <li><a href={lp('/team')}>Team</a></li>
          <li><a href={lp('/zertifizierungen')}>Zertifizierungen</a></li>
          <li><a href={lp('/newsroom')}>Newsroom</a></li>
          <li><a href={lp('/kontakt')}>Kontakt</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {year} Microvista GmbH. {labels.rights}</p>
      <nav class="legal-nav">
        <a href={lp('/impressum')}>Impressum</a>
        <a href={lp('/datenschutz')}>Datenschutz</a>
        <a href={lp('/agb')}>AGB</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer-serie {
    background: #0a0a0f;
    color: white;
    padding: var(--space-16) 0 var(--space-8);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }
  
  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }
  
  .footer-brand .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin-bottom: var(--space-4);
  }
  
  .footer-brand .logo-image {
    display: block;
    width: auto;
    height: 46px;
  }
  
  .tagline {
    color: var(--accent);
    font-weight: 600;
    margin-bottom: var(--space-6);
  }
  
  .contact-info {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }
  
  .contact-info a {
    color: var(--accent);
  }
  
  .footer-links h4 {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
    color: var(--accent);
  }
  
  .footer-links ul {
    list-style: none;
    padding: 0;
  }
  
  .footer-links li {
    margin-bottom: var(--space-2);
  }
  
  .footer-links a {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }
  
  .footer-links a:hover {
    color: white;
  }
  
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.4);
  }
  
  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }
  
  .legal-nav {
    display: flex;
    gap: var(--space-6);
  }
  
  .legal-nav a {
    color: rgba(255, 255, 255, 0.4);
  }
  
  .legal-nav a:hover {
    color: white;
  }
</style>
