---
import { localePath, type Locale } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);
const year = new Date().getFullYear();

const labels = {
  de: { labor: 'Labor Services', resources: 'Ressourcen', company: 'Unternehmen', rights: 'Alle Rechte vorbehalten.' },
  en: { labor: 'Lab Services', resources: 'Resources', company: 'Company', rights: 'All rights reserved.' },
  fr: { labor: 'Services labo', resources: 'Ressources', company: 'Entreprise', rights: 'Tous droits réservés.' },
  es: { labor: 'Servicios de laboratorio', resources: 'Recursos', company: 'Empresa', rights: 'Todos los derechos reservados.' },
  it: { labor: 'Servizi laboratorio', resources: 'Risorse', company: 'Azienda', rights: 'Tutti i diritti riservati.' }
}[locale] || { labor: 'Lab Services', resources: 'Resources', company: 'Company', rights: 'All rights reserved.' };
---

<footer class="footer-labor">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href={lp('/')} class="logo" aria-label="Microvista">
          <img
            class="logo-image"
            src="/images/logos/2024_08-MV-Logo_weiss.png"
            alt="Microvista"
            width="705"
            height="399"
            loading="lazy"
          />
        </a>
        <p class="tagline">Industrielle Computertomographie.<br/>Anywhere. Anytime. Fast.</p>
        <div class="contact-info">
          <p>Microvista GmbH</p>
          <p>Am Mönchenfelde 12</p>
          <p>38889 Blankenburg</p>
          <p><a href="tel:+49394495050">+49 3944 950-50</a></p>
          <p><a href="mailto:anfrage@microvista.de">anfrage@microvista.de</a></p>
        </div>
      </div>
      
      <div class="footer-links">
        <h4>{labels.labor}</h4>
        <ul>
          <li><a href={lp('/labor/erstmusterpruefung')}>Erstmusterprüfung</a></li>
          <li><a href={lp('/labor/schadensanalyse')}>Schadensanalyse</a></li>
          <li><a href={lp('/labor/reverse-engineering')}>Reverse Engineering</a></li>
          <li><a href={lp('/kontakt')}>Kontakt</a></li>
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>{labels.resources}</h4>
        <ul>
          <li><a href={lp('/magazin')}>Magazin</a></li>
          <li><a href={lp('/wiki')}>Wiki</a></li>
          <li><a href={lp('/dienstleistungen')}>Dienstleistungen</a></li>
          <li><a href={lp('/faq')}>FAQ</a></li>
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>{labels.company}</h4>
        <ul>
          <li><a href={lp('/team')}>Team</a></li>
          <li><a href={lp('/zertifizierungen')}>Zertifizierungen</a></li>
          <li><a href={lp('/newsroom')}>Newsroom</a></li>
          <li><a href={lp('/kontakt')}>Kontakt</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {year} Microvista GmbH. {labels.rights}</p>
      <nav class="legal-nav">
        <a href={lp('/impressum')}>Impressum</a>
        <a href={lp('/datenschutz')}>Datenschutz</a>
        <a href={lp('/agb')}>AGB</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer-labor {
    background: var(--primary);
    color: white;
    padding: var(--space-16) 0 var(--space-8);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }
  
  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }
  
  .footer-brand .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin-bottom: var(--space-4);
  }
  
  .footer-brand .logo-image {
    display: block;
    width: auto;
    height: 46px;
  }
  
  .tagline {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-6);
  }
  
  .contact-info {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
  }
  
  .contact-info a {
    color: var(--accent);
  }
  
  .footer-links h4 {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
    color: var(--accent);
  }
  
  .footer-links ul {
    list-style: none;
    padding: 0;
  }
  
  .footer-links li {
    margin-bottom: var(--space-2);
  }
  
  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }
  
  .footer-links a:hover {
    color: white;
  }
  
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.5);
  }
  
  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }
  
  .legal-nav {
    display: flex;
    gap: var(--space-6);
  }
  
  .legal-nav a {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .legal-nav a:hover {
    color: white;
  }
</style>
