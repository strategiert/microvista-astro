---
import { localePath, type Locale } from '../../i18n/translations';

const locale = (Astro.locals.locale || 'de') as Locale;
const lp = (path: string) => localePath(path, locale);

const nav = {
  de: [
    { label: 'Inline-CT', href: '/serie/inline-ct' },
    { label: '100% Prüfung', href: '/serie/100-prozent-pruefung' },
    { label: 'KI-Automatisierung', href: '/serie/ki-automatisierung' },
    { label: 'Kontakt', href: '/kontakt' },
  ],
  en: [
    { label: 'Inline CT', href: '/serie/inline-ct' },
    { label: '100% Inspection', href: '/serie/100-prozent-pruefung' },
    { label: 'AI Automation', href: '/serie/ki-automatisierung' },
    { label: 'Contact', href: '/kontakt' },
  ],
  fr: [
    { label: 'CT en ligne', href: '/serie/inline-ct' },
    { label: 'Inspection 100%', href: '/serie/100-prozent-pruefung' },
    { label: 'Automatisation IA', href: '/serie/ki-automatisierung' },
    { label: 'Contact', href: '/kontakt' },
  ],
  es: [
    { label: 'CT en línea', href: '/serie/inline-ct' },
    { label: 'Inspección 100%', href: '/serie/100-prozent-pruefung' },
    { label: 'Automatización IA', href: '/serie/ki-automatisierung' },
    { label: 'Contacto', href: '/kontakt' },
  ],
  it: [
    { label: 'CT in linea', href: '/serie/inline-ct' },
    { label: 'Ispezione 100%', href: '/serie/100-prozent-pruefung' },
    { label: 'Automazione IA', href: '/serie/ki-automatisierung' },
    { label: 'Contatto', href: '/kontakt' },
  ]
};

const items = nav[locale] || nav.en;

const labels = {
  de: { sub: 'Serienprüfung', switch: '→ Labor & Erstmuster', cta: 'ROI berechnen' },
  en: { sub: 'Serial Inspection', switch: '→ Lab & First Article', cta: 'Calculate ROI' },
  fr: { sub: 'Inspection en série', switch: '→ Laboratoire & Premier article', cta: 'Calculer le ROI' },
  es: { sub: 'Inspección en serie', switch: '→ Laboratorio y primera muestra', cta: 'Calcular ROI' },
  it: { sub: 'Controllo in serie', switch: '→ Laboratorio e primo articolo', cta: 'Calcola ROI' }
}[locale] || { sub: 'Serial Inspection', switch: '→ Lab & First Article', cta: 'Calculate ROI' };
---

<header class="header-serie">
  <div class="container">
    <div class="header-inner">
      <a href={lp('/')} class="logo" aria-label="Microvista">
        <img
          class="logo-image"
          src="/images/logos/2013-08-microvista_Logo_RGB-7.png"
          alt="Microvista"
          width="705"
          height="399"
          loading="eager"
        />
        <span class="logo-sub">{labels.sub}</span>
      </a>
      
      <nav class="main-nav">
        {items.map(item => (
          <a href={lp(item.href)} class="nav-link">{item.label}</a>
        ))}
      </nav>
      
      <div class="header-actions">
        <a href={lp('/labor')} class="switch-world">
          <span>{labels.switch}</span>
        </a>
        <a href={lp('/kontakt')} class="btn btn-primary">
          {labels.cta}
        </a>
      </div>
      
      <button class="mobile-menu-btn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header-serie {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--background);
    border-bottom: 1px solid var(--border);
    padding: var(--space-4) 0;
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }
  
  .logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-4);
    text-decoration: none;
  }

  .logo-image {
    display: block;
    width: auto;
    height: 42px;
  }
  
  .logo-sub {
    font-size: var(--text-xs);
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 640px) {
    .logo-sub {
      display: none;
    }
  }
  
  .main-nav {
    display: none;
    align-items: center;
    gap: var(--space-1);
  }
  
  @media (min-width: 1024px) {
    .main-nav {
      display: flex;
    }
  }
  
  .nav-link {
    padding: var(--space-2) var(--space-4);
    color: var(--text);
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }
  
  .nav-link:hover {
    background: var(--surface);
    color: var(--accent);
  }
  
  .header-actions {
    display: none;
    align-items: center;
    gap: var(--space-4);
  }
  
  @media (min-width: 1024px) {
    .header-actions {
      display: flex;
    }
  }
  
  .switch-world {
    font-size: var(--text-sm);
    color: var(--text-muted);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    transition: all var(--transition-fast);
  }
  
  .switch-world:hover {
    border-color: var(--accent);
    color: var(--accent);
  }
  
  .btn-primary {
    background: var(--accent);
    color: #000;
    font-weight: 600;
  }
  
  .btn-primary:hover {
    background: var(--accent-light);
  }
  
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: var(--space-2);
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--text);
    border-radius: 2px;
    transition: all var(--transition-fast);
  }
  
  @media (min-width: 1024px) {
    .mobile-menu-btn {
      display: none;
    }
  }
</style>
