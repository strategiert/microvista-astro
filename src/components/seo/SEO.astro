---
/**
 * SEO Component - Zentrale Meta-Tag Verwaltung
 * Basiert auf Astro SEO Guide Best Practices
 */
import {
  defaultLocale,
  enabledLocales,
  enabledLocaleRecords,
  resolveLocale,
  stripLocalePrefix
} from '../../i18n/translations';

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  noindex?: boolean;
  type?: 'website' | 'article';
  publishDate?: Date;
  modifiedDate?: Date;
  author?: string;
}

const {
  title,
  description,
  image = '/images/og-default.jpg',
  canonicalUrl,
  noindex = false,
  type = 'website',
  publishDate,
  modifiedDate,
  author
} = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://microvista.de';
const canonical = canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
const locale = resolveLocale(Astro.locals.locale);

// Hreflang URLs nur für aktivierte Sprachen
const currentPath = stripLocalePrefix(Astro.url.pathname);
const locales = enabledLocaleRecords(currentPath, siteUrl);
const xDefaultHref = locales[defaultLocale] || `${siteUrl}${currentPath}`;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}
<link rel="canonical" href={canonical} />

<!-- Hreflang für i18n -->
{enabledLocales.map((item) => (
  <link rel="alternate" hreflang={item} href={locales[item]} />
))}
<link rel="alternate" hreflang="x-default" href={xDefaultHref} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:locale" content={{
  de: 'de_DE',
  en: 'en_US',
  fr: 'fr_FR',
  es: 'es_ES',
  it: 'it_IT'
}[locale] || 'de_DE'} />
<meta property="og:site_name" content="Microvista" />

{type === 'article' && publishDate && (
  <meta property="article:published_time" content={publishDate.toISOString()} />
)}
{type === 'article' && modifiedDate && (
  <meta property="article:modified_time" content={modifiedDate.toISOString()} />
)}
{type === 'article' && author && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
