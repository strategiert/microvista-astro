---
/**
 * SEO Component - Zentrale Meta-Tag Verwaltung
 * Basiert auf Astro SEO Guide Best Practices
 */
interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  noindex?: boolean;
  type?: 'website' | 'article';
  publishDate?: Date;
  modifiedDate?: Date;
  author?: string;
}

const {
  title,
  description,
  image = '/images/og-default.jpg',
  canonicalUrl,
  noindex = false,
  type = 'website',
  publishDate,
  modifiedDate,
  author
} = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://microvista.de';
const canonical = canonicalUrl || new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
const locale = Astro.currentLocale || 'de';

// Hreflang URLs für alle 5 Sprachen
const currentPath = Astro.url.pathname.replace(/^\/(de|en|fr|es|it)/, '').replace(/^\//, '/');
const locales = {
  de: `${siteUrl}${currentPath}`,           // Default ohne Prefix
  en: `${siteUrl}/en${currentPath}`,
  fr: `${siteUrl}/fr${currentPath}`,
  es: `${siteUrl}/es${currentPath}`,
  it: `${siteUrl}/it${currentPath}`
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}
<link rel="canonical" href={canonical} />

<!-- Hreflang für i18n (5 Sprachen) -->
<link rel="alternate" hreflang="de" href={locales.de} />
<link rel="alternate" hreflang="en" href={locales.en} />
<link rel="alternate" hreflang="fr" href={locales.fr} />
<link rel="alternate" hreflang="es" href={locales.es} />
<link rel="alternate" hreflang="it" href={locales.it} />
<link rel="alternate" hreflang="x-default" href={locales.de} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:locale" content={{
  de: 'de_DE',
  en: 'en_US',
  fr: 'fr_FR',
  es: 'es_ES',
  it: 'it_IT'
}[locale] || 'de_DE'} />
<meta property="og:site_name" content="Microvista" />

{type === 'article' && publishDate && (
  <meta property="article:published_time" content={publishDate.toISOString()} />
)}
{type === 'article' && modifiedDate && (
  <meta property="article:modified_time" content={modifiedDate.toISOString()} />
)}
{type === 'article' && author && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />
